<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefWidth="500" prefHeight="500" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bibliotecadigitale.Controller.BookInfoController">
    <VBox layoutX="50" layoutY="50" spacing="10" style="-fx-padding: 10; -fx-background-color: #f8f8f8;">
        <HBox spacing="10">
            <Label text="Title:" style="-fx-font-weight: bold;" />
            <Label fx:id="title" style="-fx-background-color: #e8e8e8; -fx-padding: 5;" />
        </HBox>

        <HBox spacing="10">
            <Label text="Author:" style="-fx-font-weight: bold;" />
            <Label fx:id="author" style="-fx-background-color: #e8e8e8; -fx-padding: 5;" />
        </HBox>

        <HBox spacing="10">
            <Label text="ISBN:" style="-fx-font-weight: bold;" />
            <Label fx:id="isbn" style="-fx-background-color: #e8e8e8; -fx-padding: 5;" />
        </HBox>

        <HBox spacing="10">
            <Label text="Publisher:" style="-fx-font-weight: bold;" />
            <Label fx:id="publisher" style="-fx-background-color: #e8e8e8; -fx-padding: 5;" />
        </HBox>

        <HBox spacing="10">
            <Label text="Genre:" style="-fx-font-weight: bold;" />
            <Label fx:id="genre" style="-fx-background-color: #e8e8e8; -fx-padding: 5;" />
        </HBox>

        <HBox spacing="10">
            <Button onAction="#addToFavorites" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10;">
                <graphic>
                    <ImageView>
                        <Image url="@star.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Next Book" onAction="#nextBook" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10;" />
        </HBox>

        <HBox spacing="10">
            <Button text="Back" onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10;" />
        </HBox>
    </VBox>
</AnchorPane>